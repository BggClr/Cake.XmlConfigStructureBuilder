<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net46</TargetFrameworks>
	</PropertyGroup>

	<PropertyGroup>
		<PackageId>Cake.XmlConfigStructureBuilder</PackageId>
		<PackageVersion>1.0.0</PackageVersion>
		<Authors>BggClr</Authors>
		<Description>The project compiles multiple xml configs to single one using the CTT</Description>
		<PackageLicenseUrl>http://www.opensource.org/licenses/mit-license.php</PackageLicenseUrl>
		<PackageProjectUrl>https://github.com/graph-uk/Cake.XmlConfigStructureBuilder.git</PackageProjectUrl>
		<PackageIconUrl>https://github.com/cake-contrib/graphics/raw/master/png/cake-contrib-medium.png</PackageIconUrl>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<PackageTags>Configs-Generator</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Cake.Core" Version="0.27.2" PrivateAssets="All" />
		<PackageReference Include="Microsoft.Web.Xdt" Version="2.1.2" />
	</ItemGroup>
	
	 <ItemGroup>
		<ProjectReference Include="..\XmlConfigStructureBuilder\XmlConfigStructureBuilder.csproj" NoWarn="NU1701" PrivateAssets="All"/>
	</ItemGroup> 

	<!-- Hack -->
	<ItemGroup>
		<_PackageFiles Include="$(OutputPath)\net46\XmlConfigStructureBuilder.dll">
			<BuildAction>None</BuildAction>
			<PackagePath>lib\net46\</PackagePath>
		</_PackageFiles>
		<_PackageFiles Include="$(OutputPath)\netstandard2.0\XmlConfigStructureBuilder.dll">
			<BuildAction>None</BuildAction>
			<PackagePath>lib\netstandard2.0\</PackagePath>
		</_PackageFiles>
	</ItemGroup>
</Project>
